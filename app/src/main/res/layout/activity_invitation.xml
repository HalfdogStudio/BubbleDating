<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="halfdog.bupt.edu.bubbledating.activity.InvitationActivity">

    <EditText
        android:id="@+id/invitation_activity_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/invitation_activity_content_edittext_horizontal_padding"
        android:paddingRight="@dimen/invitation_activity_content_edittext_horizontal_padding"
        android:paddingTop="@dimen/invitation_activity_content_edittext_vertical_padding"
        android:paddingBottom="@dimen/invitation_activity_content_edittext_vertical_padding"
        android:cursorVisible="true"
        android:hint="@string/activity_invitation_edittext_hint"/>

</RelativeLayout>
