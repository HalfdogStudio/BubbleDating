<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="halfdog.bupt.edu.bubbledating.activity.PersonInfoActivity">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/person_info_avatar"
        android:layout_width="@dimen/person_info_avator_width_height"
        android:layout_height="@dimen/person_info_avator_width_height"
        android:layout_marginTop="@dimen/person_info_vertical_interval"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/person_info_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/person_info_avatar"
        android:textSize="@dimen/person_info_name_size"
        android:textColor="@color/person_info_activity_text_color"
        android:layout_marginTop="@dimen/person_info_vertical_interval"
        android:layout_centerHorizontal="true"
        android:text="@string/hello_world" />

    <ImageView
        android:id="@+id/person_info_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/person_info_vertical_interval"
        android:layout_below="@id/person_info_name"/>
    <TextView
        android:id="@+id/person_info_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="@color/person_info_activity_text_color"
        android:layout_marginTop="@dimen/person_info_vertical_interval"
        android:textSize="@dimen/person_info_email_size"
        android:layout_below="@id/person_info_gender"/>

    <com.gc.materialdesign.views.ButtonRectangle
        android:id="@+id/exit_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/person_info_exit_login_button_padding_left_right"
        android:paddingRight="@dimen/person_info_exit_login_button_padding_left_right"
        android:background="#ff4444"
        android:text="@string/exit_login"
        android:layout_marginTop="@dimen/person_info_exit_login_margin_top"
        android:layout_below="@id/person_info_email"
        android:layout_centerHorizontal="true"/>



</RelativeLayout>
