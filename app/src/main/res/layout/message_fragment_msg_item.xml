<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" 
    android:layout_height="70dp"
    android:padding="10dp"
    android:background="#fff">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ImageView
            android:id="@+id/lattest_msg_avatar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/default_user_head"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/lattest_msg_avatar"
            android:layout_marginLeft="10dp"
            >
            <TextView
                android:id="@+id/lattest_msg_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:textColor="#33b5e5"
                android:textSize="18sp"
                android:includeFontPadding="false"
                />
            <TextView
                android:id="@+id/lattest_msg_posttime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:textColor="#999"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/lattest_msg_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lattest_msg_title"
                android:layout_marginTop="10dp"
                android:textColor="#999"
                android:textSize="12sp"
                android:ellipsize="end"
                android:includeFontPadding="false"
                />

            </RelativeLayout>
        </RelativeLayout>

</RelativeLayout>
